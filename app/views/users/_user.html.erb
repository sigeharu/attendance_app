<%= form_with(model: @user, url: user_update_user_path(user), method: :patch, local: true) do |f| %>
  <%= render 'shared/error_messages', { user: user } %>

  <%= f.label :name, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :name, value: user.name, class: "form-control" %>
  
  <%= f.label :email, class: "label-#{yield(:class_text)}" %>
  <%= f.email_field :email, value: user.email, class: "form-control" %>
  
  <%= f.label :department, class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :department, value: user.department, class: "form-control" %>
  
  <%= f.label :employee_number, value: "社員番号 (半角英数字6文字)", class: "label-#{yield(:class_text)}" %>
  <%= f.text_field :employee_number, value: user.employee_number, class: "form-control" %>
  
  <%= f.label :card_id, class: "label-#{:class_text}" %>
  <%= f.text_field :card_id, value: user.card_id, class: "form-control" %>
  
  <%= f.label :password, class: "label-#{yield(:class_text)}" %>
  <%= f.password_field :password, class: "form-control" %>
  
  <%= f.label :password_confirmation, class: "label-#{yield(:class_text)}" %>
  <%= f.password_field :password_confirmation, class: "form-control" %>
  
  <%= f.label :basic_time, class: "label-#{yield}" %>
  <%= f.time_field :basic_time, class: "form-control" %>
  
  <%= f.label :work_start_time, class: "label-#{yield}" %>
  <%= f.time_field :work_start_time, class: "form-control" %>
  
  <%= f.label :work_end_time, class: "label-#{yield}" %>
  <%= f.time_field :work_end_time, class: "form-control" %>
  
  <%= f.submit "編集する", class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
<% end %>