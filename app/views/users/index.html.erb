<% provide(:title, 'All Users') %>
<h1>ユーザー一覧</h1>

<div class="row container">
  <div class="col-md-4 col-md-offset-1">
    <%= form_tag import_users_path, multipart: true do %>
      <%= file_field_tag :file %>
      <%= submit_tag "CSVインポート", class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

<div class="col-md-10 col-md-offset-1">
  <table class="table">
    <%= will_paginate %>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %><br>
          <% if current_user.admin? && !current_user?(user) %>
            <%= link_to "削除", user, method: :delete, data: { confirm: "削除してもよろしいですか？" }, class: "btn btn-primary" %><br>
            <div class="panel-group">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h4 class="panel-title">
                    <button type="button" data-toggle="collapse" data-target="#collapse<%= user.id %>" class="btn btn-primary">編集</button>
                  </h4>
                </div>
                <div id="collapse<%= user.id %>" class="panel-collapse collapse">
                  <div class="panel-body">
                    <%= render 'user', { user: user } %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
  <%= will_paginate %>
</div>
