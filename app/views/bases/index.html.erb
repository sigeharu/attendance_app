<% provide(:title, "拠点一覧") %>
<h1>拠点一覧</h1>
<div class="base">
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th></th>
          <th></th>
          <th>拠点番号</th>
          <th>拠点名</th>
          <th>拠点種類</th>
        </tr>
      </thead>
      
      <tbody>
        <% @bases.each do |base| %>
        <tr>
          <td><%= link_to "修正", edit_basis_path(base), remote: true, class: "btn btn-primary" %></td>
          <td><%= link_to "削除", basis_path(base), method: :delete, data: { confirm: "削除してよろしいですか？" }, class: "btn btn-primary" %></td>
          <td><%= base.office_number %></td>
          <td><%= base.office_name %></td>
          <td><%= base.office_category %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div id="add-info">
      <%= link_to "拠点情報追加", new_basis_path, remote: true, class: "btn btn-primary" %>
    </div>
  </div>
</div>

<!--モーダルウインドウ表示 修正-->
<div id="edit" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>

<!--モーダルウインドウ表示 追加-->
<div id="new" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true"></div>
